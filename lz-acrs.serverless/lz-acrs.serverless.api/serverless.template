{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Description": "An AWS Serverless Application which hosts backend Api's for Xpanxion PoC for Lz-Acrs.",

  "Resources": {
	"ConsultationApiExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "consultation-api-execution-role",
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "CloudWatchLogsFullAccess",
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "logs:*"
                  ],
                  "Effect": "Allow",
                  "Resource": "arn:aws:logs:*:*:*"
                }
              ]
            }
          },
          {
            "PolicyName": "SNSFullAccess",
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "sns:*"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                }
              ]
            }
          },
          {
            "PolicyName": "SQSFullAccess",
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "sqs:*"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                }
              ]
            }
          },
          {
            "PolicyName": "LambdaFullAccess",
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "lambda:*"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                }
              ]
            }
          },
          {
            "PolicyName": "DynamoDBFullAccess",
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "dynamodb:*"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                }
              ]
            }
          }
        ],
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ]
        }
      }
    },
    "GetAllConsultationRequest": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "Acrs.Serverless.Application::Acrs.Serverless.Application.GetConsultationsFunction::ExecuteAsync",
        "Runtime": "dotnetcore2.1",
        "CodeUri": "",
        "Policies": [ "AWSLambdaFullAccess" ], 
		"MemorySize": 256,
        "Timeout": 30,
		"Role": {
          "Fn::GetAtt": [
            "ConsultationApiExecutionRole",
            "Arn"
          ]
        },
        "Events": {
          "GetResource": {
            "Type": "Api",
            "Properties": {
              "Path": "/consultations",
              "Method": "GET"
            }
          }
        }
      }
    },
    "GetConsultationByIdRequest": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "Acrs.Serverless.Application::Acrs.Serverless.Application.GetConsultationByIdFunction::ExecuteAsync",
        "Runtime": "dotnetcore2.1",
        "CodeUri": "",
        "Policies": [ "AWSLambdaFullAccess" ], 
		"MemorySize": 256,
        "Timeout": 30,
		"Role": {
          "Fn::GetAtt": [
            "ConsultationApiExecutionRole",
            "Arn"
          ]
        },
        "Events": {
          "PutResource": {
            "Type": "Api",
            "Properties": {
				"Path":"/consultation/{orderNumber}", 
				"Method": "GET"
            }
          }
        }
      }
    },
	"ConsultationTable" : {
		"Type" : "AWS::DynamoDB::Table",
		"Properties": {
        "AttributeDefinitions": [
          {
            "AttributeName": "OrderNumber",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "OrderNumber",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": "5",
          "WriteCapacityUnits": "5"
        },
        "TableName": "Consultation"
      }
	}
  },

  "Outputs": {
    "ApiURL": {
      "Description": "API endpoint URL for Prod environment",
      "Value": { "Fn::Sub": "https://${ServerlessRestApi}.execute-api.${AWS::Region}.amazonaws.com/Prod/" }
    }
  }
}